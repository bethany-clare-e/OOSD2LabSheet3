<Window x:Class="Ex2_Expense.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex2_Expense"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="lbxExpenses" HorizontalAlignment="Left" Height="215" Margin="27,25,0,0" VerticalAlignment="Top" Width="242"/>
        <Button x:Name="btnAdd" Content="Add Expense" HorizontalAlignment="Left" Margin="27,258,0,0" VerticalAlignment="Top" Width="75" Click="btnAdd_Click"/>
        <TextBlock x:Name="tblkTotal" HorizontalAlignment="Left" Margin="413,262,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="65"/>
        <Button x:Name="btnRemove" Content="Remove" HorizontalAlignment="Left" Margin="188,258,0,0" VerticalAlignment="Top" Width="75" Click="btnRemove_Click"/>
        <Label Content="Total" HorizontalAlignment="Left" Margin="359,258,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
